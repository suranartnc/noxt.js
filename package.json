{
  "name": "Noxt.js",
  "version": "0.1.0",
  "description": "A minimalistic framework for universal server-rendered React applications (inspired by Next.js).",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev-ssr dev-hmr",
    "dev-ssr": "better-npm-run dev-ssr",
    "dev-hmr": "better-npm-run dev-hmr",
    "postinstall": "npm run build-vendor && npm run build",
    "build": "better-npm-run build",
    "build-vendor": "webpack -p --config ./.noxt/webpack/vendor.webpack.config.babel.js",
    "start": "npm-run-all --parallel start-ssr",
    "start-ssr": "better-npm-run start-ssr",
    "lint": "./node_modules/.bin/eslint ./src"
  },
  "betterScripts": {
    "dev-ssr": {
      "command": "node .",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src"
      }
    },
    "dev-hmr": {
      "command": "node ./dev-server",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --config ./.noxt/webpack/webpack.config.prod.babel.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src"
      }
    },
    "start-ssr": {
      "command": "node .",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "./src",
        "BABEL_DISABLE_CACHE": 1
      }
    },
    "start-api": {
      "command": "node ./api-server",
      "env": {
        "NODE_ENV": "development",
        "NODE_PATH": "./src"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://suranartnc@bitbucket.org/suranartnc/noxt.js.git"
  },
  "keywords": [
    "react",
    "isomorphic",
    "framework",
    "boilerplate",
    "starter kit",
    "universal",
    "javascript",
    "es2015"
  ],
  "author": "Suranart Niamcome",
  "license": "MIT",
  "dependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "autoprefixer": "^6.6.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-css-modules-transform": "^1.1.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-react-css-modules": "^1.2.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.16.0",
    "better-npm-run": "0.0.13",
    "body-parser": "^1.15.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "css-loader": "^0.26.1",
    "es6-promise": "^4.0.5",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "isomorphic-fetch": "^2.2.1",
    "json-loader": "^0.5.4",
    "node-sass": "^4.1.1",
    "npm-run-all": "^3.1.2",
    "postcss-loader": "^1.2.1",
    "progress-bar-webpack-plugin": "^1.9.1",
    "react": "^15.4.1",
    "react-css-modules": "^4.1.0",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0",
    "react-router-scroll": "^0.4.1",
    "sass-loader": "^4.1.1",
    "serve-favicon": "^2.3.2",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0-rc.3",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.14.0"
  },
  "devDependencies": {
    "react-hot-loader": "3.0.0-beta.6",
    "webpack-dashboard": "^0.2.0"
  }
}
